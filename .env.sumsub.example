# Sumsub Environment Variables Template
# Copy these lines to your .env file and fill in your actual credentials

# === Sumsub Configuration ===
# Get these credentials from: https://cockpit.sumsub.com/

# Sumsub API Base URL
VITE_SUMSUB_API_URL=https://api.sumsub.com

# Your Sumsub App Token (from Settings > App Tokens)
VITE_SUMSUB_APP_TOKEN=your_app_token_here

# Your Sumsub Secret Key (from Settings > App Tokens)
# IMPORTANT: Never commit this to version control!
# IMPORTANT: Never expose this to the frontend!
VITE_SUMSUB_SECRET_KEY=your_secret_key_here

# Enable Sandbox Mode for testing (set to 'false' for production)
VITE_SUMSUB_SANDBOX_MODE=true

# === Webhook Configuration (Backend) ===
# Set this in Sumsub dashboard > Settings > Webhooks
# Example: https://yourdomain.com/api/sumsub/webhook
SUMSUB_WEBHOOK_URL=http://localhost:3000/api/sumsub/webhook

# === Optional: Sumsub Additional Settings ===
# Default verification level (used if not specified in request)
SUMSUB_DEFAULT_LEVEL_NAME=basic-kyc-level

# Verification level for high-value transactions
SUMSUB_COMPLIANCE_LEVEL_NAME=compliance-kyc-level

# === Development/Testing ===
# Skip KYC requirement in development (set to 'true' to disable KYC)
SKIP_KYC_VERIFICATION=false

# === Security ===
# IP Whitelist for webhook callbacks (optional)
# SUMSUB_WEBHOOK_IP_WHITELIST=123.45.67.89
